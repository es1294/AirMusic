<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:background="@drawable/app_background2"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:src ="@drawable/default_profile_pic_png_9" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Firstname Lastname"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_marginTop="213dp"
        android:maxLines="5"
        android:text="About Firstname:"
        android:textSize="20sp" />

    <HorizontalScrollView
        android:layout_width="360dp"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/recentSongs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="6"
        android:text="Favorite Artists"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="172dp"
        android:layout_height="105dp"
        android:layout_alignStart="@+id/imageView"

        android:layout_below="@+id/textView2"
        android:maxLines="6"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean ligula tellus, imperdiet ac, egestas " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="171dp"
        android:layout_height="133dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="Artist 1\nArtist 2\nArtist 3\nArtist 4\nArtist 5\n"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:textSize="20dp"
        android:text="Favorite Genres" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="169dp"
        android:layout_height="105dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/textView4"
        android:text="Genre 1\nGenre 2\nGenre 3\n"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_marginBottom="110dp"
        android:textSize = "20dp"
        android:text="Recently Listened Songs:" />


</RelativeLayout>